<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crdv_item"
    style="@style/BaseCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xxxlarge">


        <TextView
            android:id="@+id/tv_work_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="tvWorkTitle"
            android:textAppearance="@style/TextAppearance.Normal.Bold"
            android:textColor="@color/md_black_1000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            tools:text="tvCompanyName"
            android:textAppearance="@style/TextAppearance.Normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_work_title" />

        <TextView
            android:id="@+id/tv_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            tools:text="tvWorkTime"
            android:textAppearance="@style/TextAppearance.Normal"
            android:textColor="@color/md_grey_600"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_name" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/vw_split"
            android:background="@color/md_grey_400"
            app:layout_constraintTop_toBottomOf="@+id/tv_work_time"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            tools:text="tvSummary"
            android:textAppearance="@style/TextAppearance.Small.Bold"
            android:textColor="@color/md_grey_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vw_split" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
