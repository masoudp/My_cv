<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.ToolbarStyle">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/primary_dark</item>
    </style>


    <style name="BaseCardView">
        <item name="cardCornerRadius">@dimen/card_radius_normal</item>
        <item name="cardElevation">@dimen/elevation_normal</item>
        <item name="cardMaxElevation">@dimen/elevation_normal</item>
        <!--<item name="cardUseCompatPadding">true</item>-->
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="backgroundTint">@color/btn_bg_color</item>
    </style>

    <style name="AppTheme.Button.Light" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_normal_color</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.xLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.xLarge">
        <item name="android:textSize">@dimen/font_xxlarge</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextAppearance.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
